---
import Footer from "../sections/common/Footer.astro";
import Header from "../sections/common/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>
      EMME Dental - Odontopediatría y Ortodoncia para niños y adultos
    </title>
    <meta
      name="description"
      content="EMME Dental es una clínica especializada en odontopediatría y ortodoncia para niños y adultos. Ofrecemos tratamientos personalizados para cuidar la salud bucal de toda la familia."
    />
    <meta
      name="keywords"
      content="odontopediatría, ortodoncia, clínica dental, salud bucal, tratamientos dentales, niños, adultos, cuidado dental"
    />
    <meta name="author" content="David Osuna" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    <meta name="yandexbot" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class="bg-accent/20">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  @font-face {
    font-family: "apercu-regular-pro";
    src: url("/fonts/apercu-regular-pro.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "basis-grotesque-off-white-pro";
    src: url("/fonts/basis-grotesque-off-white-pro.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  * {
    box-sizing: border-box;
    font-family: "basis-grotesque-off-white-pro", sans-serif;
  }

  .font-secondary {
    font-family: "apercu-regular-pro", sans-serif;
  }

  a:hover,
  a:hover * {
    color: var(--color-accent) !important;
    transition: color 150ms ease-in-out;
  }
</style>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    cursor: url("/images/utils/tooth/toothbrush.svg"), auto;
  }

  main {
    flex: 1;
  }

  * {
    scroll-behavior: smooth;
    scroll-padding-top: 50px;
    letter-spacing: 2.8px;
  }
</style>

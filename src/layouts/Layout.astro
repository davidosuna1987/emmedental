---
import Footer from "../sections/common/Footer.astro";
import Header from "../sections/common/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Dra. Esther Martínez - Odontopediatría y Ortodoncia Pamplona</title>
    <meta
      name="description"
      content="Dra. Esther Martínez, especialista en odontopediatría y ortodoncia en Pamplona, Navarra. Tratamiento integral desde bebés hasta adolescentes con formación de excelencia."
    />
    <meta
      name="keywords"
      content="odontopediatría pamplona, ortodoncia navarra, dentista niños pamplona, ortodoncista pamplona, odontopediatra navarra, brackets pamplona, alineadores invisibles pamplona"
    />

    <!-- Open Graph -->
    <meta
      property="og:title"
      content="Dra. Esther Martínez - Odontopediatría y Ortodoncia Pamplona"
    />
    <meta
      property="og:description"
      content="Especialista en odontopediatría y ortodoncia en Pamplona, Navarra. Tratamiento integral desde bebés hasta adolescentes."
    />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />

    <!-- SEO Local -->
    <meta name="geo.region" content="ES-NA" />
    <meta name="geo.placename" content="Pamplona, Navarra" />
    <meta name="geo.position" content="42.816667;-1.65" />

    <!-- Schema.org para dentista -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Dentist",
        "name": "Dra. Esther Martínez Martínez",
        "specialty": ["Odontopediatría", "Ortodoncia"],
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Pamplona",
          "addressRegion": "Navarra",
          "addressCountry": "ES"
        },
        "areaServed": ["Pamplona", "Navarra", "Comarca de Pamplona"],
        "priceRange": "€€",
        "description": "Especialista en odontopediatría y ortodoncia. Doble formación en ortodoncia y máster en odontopediatría. Tratamiento integral desde bebés hasta adolescentes."
      }
    </script>

    <meta name="author" content="David Osuna" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    <meta name="yandexbot" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class="bg-background">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  @font-face {
    font-family: "Apercu Regular PRO";
    src: url("/fonts/apercu-regular-pro.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Basis Grotesque Off White PRO";
    src: url("/fonts/basis-grotesque-off-white-pro.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Dancing Script";
    src: url("/fonts/dancing-script-variable.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  * {
    box-sizing: border-box;
  }

  body {
    font-family:
      "Basis Grotesque Off White PRO", Helvetica, Arial, Lucida, sans-serif;
    color: var(--color-text);
  }

  .font-secondary {
    font-family: "Apercu regular pro", Helvetica, Arial, Lucida, sans-serif;
  }

  .font-serif {
    font-family: "Dancing Script", cursive;
    text-transform: none;
  }

  .font-georgia {
    font-family: Georgia, serif !important;
    text-transform: none;
  }

  a:hover,
  a:hover * {
    color: var(--color-accent) !important;
    transition: color 150ms ease-in-out;
  }

  strong {
    color: var(--color-accent);
  }

  p {
    text-wrap: pretty;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    text-wrap: balance;
    font-family: "Apercu Regular PRO", Helvetica, Arial, Lucida, sans-serif;
  }
</style>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    cursor: url("/images/utils/tooth/toothbrush.svg"), auto;
  }

  main {
    flex: 1;
  }

  * {
    scroll-behavior: smooth;
    scroll-padding-top: 50px;
    letter-spacing: 2.8px;
  }
</style>

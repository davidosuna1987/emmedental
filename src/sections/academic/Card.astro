---
interface Props {
  badge?: string;
  level?: string;
  title?: string;
  descriptionLabel?: string;
  description?: string;
  accent?: boolean;
  highlight?: boolean;
  monochrome?: boolean;
  small?: boolean;
  shadow?: boolean;
  class?: string;
  descriptionItalic?: boolean;
  descriptionLabelItalic?: boolean;
}

const {
  title,
  description,
  descriptionLabel,
  badge,
  level,
  accent = false,
  highlight = false,
  monochrome = false,
  small = false,
  shadow = false,
  class: className,
  descriptionItalic = true,
  descriptionLabelItalic = false,
} = Astro.props;

const showHeader = badge || level;
---

<article
  class:list={[
    "academic-card",
    {
      accent: accent,
      highlight: highlight,
      monochrome: monochrome,
      small: small,
      shadow: shadow,
    },
    className,
  ]}
>
  {
    showHeader && (
      <div class="academic-card-header">
        {badge && <span class="academic-card-badge">{badge}</span>}
        {level && <div class="academic-card-level">{level}</div>}
      </div>
    )
  }
  {
    title && (
      <h4
        class:list={["academic-card-title", descriptionLabel ? "mb-1" : "mb-3"]}
      >
        {title}
      </h4>
    )
  }
  {
    descriptionLabel && (
      <p
        class:list={[
          "academic-card-description-label",
          { italic: descriptionLabelItalic },
        ]}
      >
        {descriptionLabel}
      </p>
    )
  }
  {
    description && (
      <p
        class:list={[
          "academic-card-description",
          { italic: descriptionItalic },
        ]}
      >
        {description}
      </p>
    )
  }
</article>

<style>
  .academic-card {
    padding: 30px;
    border-left: 4px solid #e0e0e0;
    transition: all 0.3s ease;
  }

  .academic-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
  }

  .academic-card-badge {
    background: var(--color-accent);
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: bold;
  }

  .academic-card-level {
    font-size: 11px;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .academic-card-title {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    line-height: 1.3;
  }

  .academic-card-description-label {
    font-size: 14px;
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 10px;
  }

  .academic-card-description {
    font-size: 14px;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  /* Small */
  .academic-card.small {
    padding: 20px;
  }

  .academic-card.small.shadow {
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
  }

  .academic-card.small .academic-card-badge {
    padding: 4px 10px;
    border-radius: 15px;
    font-size: 11px;
    font-weight: bold;
  }

  .academic-card.small .academic-card-title {
    font-size: 14px;
  }

  .academic-card.small .academic-card-description-label {
    font-size: 13px;
    margin-bottom: 8px;
  }

  .academic-card.small .academic-card-description {
    font-size: 12px;
    margin-bottom: 8px;
  }

  /* Accent */
  .academic-card.accent {
    border-left-color: var(--color-accent);
  }

  /* Highlight */
  .academic-card.highlight {
    background-color: color-mix(in srgb, var(--color-accent) 10%, transparent);
  }

  .academic-card.highlight .academic-card-title {
    color: var(--color-accent);
  }

  .academic-card.highlight .academic-card-description {
    color: black;
  }

  /* Monochrome */
  .academic-card.monochrome {
    background-color: white;
  }

  .academic-card.monochrome .academic-card-title {
    color: #333333;
  }

  .academic-card.monochrome .academic-card-description-label {
    color: #666666;
  }

  .academic-card.monochrome .academic-card-description {
    color: #777777;
  }

  @media (max-width: 480px) {
    .academic-card {
      padding: 20px 15px;
    }
  }
</style>
